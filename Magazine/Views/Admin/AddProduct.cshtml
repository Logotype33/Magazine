@model Product
<div class="container" style="width: 80%; margin:0 , 0, auto" ;>
    <div class="card bg-light border-dark ">

        <h5 class="card-header info-color white-text text-center">
            <strong>Create new product</strong>
        </h5>
        <div class="card-body" style="background-color: white">

            <form asp-action="AddProduct" method="post" enctype="multipart/form-data">
                <div class="form-group">
                    <label asp-for="Name">Name</label>
                    <input class="form-control" type="text" asp-for="Name" />
                </div>
                <div class="form-group">
                    <label asp-for="Price">Price</label>
                    <input class="form-control" type="text" asp-for="Price" />
                </div>
                <div class="form-group">
                    <label asp-for="Path">Path</label>
                    <input class="form-control" type="file"  name="uploadedFile" asp-for="Path" />
                   
                </div>
                <div class="form-group text-center">
                    <input class="btn btn-success btn-lg" type="submit" value="Add" />
                </div>
            </form>

        </div>
    </div>
</div>