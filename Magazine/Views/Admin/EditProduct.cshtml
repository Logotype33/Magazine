@model Product
    <div class="align-items-center" style="width:80%; margin:auto">
        <form asp-action="EditProduct"  asp-route-Id="@Model.Id" enctype="multipart/form-data">

            <div class="card bg-light border-dark d-flex align-items-center"  style="width: 30rem; margin:auto">
                <div class="form-group">
                    <img class="card-img-top img-thumbnail " style="width:15rem;" src="@Url.Content(Model.Path)">
                </div>
                <div class="form-group">

                    <input type="text" asp-for="Name" class="form-control" />
                </div>
                <div class="card-body">
                    <div class="form-group">
                        <input type="text" asp-for="Price" class="form-control" />
                    </div>
                    <div class="form-group">
                        <input type="file" asp-for="Path" name="uploadedFile" /><br>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Сохранить" class="btn btn-default" />
                    </div>
                </div>
            </div>

        </form>

        <a class="btn btn-primary" asp-action="Index">Back</a>
    </div>